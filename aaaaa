<script type="text/javascript">





var cd=0;



function loading() {

    var loading = document.getElementById("loading");

    loading.style.zIndex=0;

    loading.style.display="none";

    document.getElementById("music").play();

    playAnimation();

}



function nextDrawing() {

    cd++;

    setDrawing();

}



function prevDrawing() {

    cd--;

    setDrawing();

}



function setDrawing() {

    var drawing_img = document.getElementById("drawing_img");



   if(cd==0){

        drawing_img.src = "   https://www.dropbox.com/s/zid3m15i9s4ccxu/IMG_20190417_105300.jpg?dl=1 ";

    }else if(cd==1){

        drawing_img.src = "https://www.dropbox.com/s/yraluyir1g433ov/Serena_Yv_drawing_1.png?dl=1";

    }else if(cd==2) {

        drawing_img.src = "https://www.dropbox.com/s/nei66yhkmnlw2by/Serena_Yv_drawing_2.png?dl=1";

    }else if(cd==3){

        drawing_img.src = "https://www.dropbox.com/s/pej4hlhyk0iqnm8/Serena_Yv_drawing_3.png?dl=1";

    }else if(cd==-1){

        cd=3;

        drawing_img.src = "https://www.dropbox.com/s/pej4hlhyk0iqnm8/Serena_Yv_drawing_3.png?dl=1";

    }else{

        cd=0;

        drawing_img.src = "https://www.dropbox.com/s/a6mb0ptroiyr7y8/serena_drawing.jpg?dl=1";

    }

}





function playAnimation() {



    var a = document.getElementById('a');

    var b = document.getElementById('b');

    var pic = document.getElementById('pic');

    var drawing = document.getElementById("drawing");

    var bhomic = document.getElementById("bhomic");



    a.style.animation = 'move_down 10s';

    a.style.animationFillMode='forwards';



    b.style.animation = 'move_up 10s';

    b.style.animationFillMode='forwards';



    setTimeout(function () {



        animateIt("Even With Your Eyes Close.", "You are awsm, what if they were open<br>ğŸ˜†ğŸ˜‰ğŸ˜‡", "yellow", true);



        pic.style.animation = 'fade 6s';

        pic.style.animationFillMode='forwards';

        setTimeout(function () {

            pic.style.animation = 'fade_out 4s';

            pic.style.animationFillMode='forwards';

            setTimeout(function () {



                animateIt("The most <span>powerful coder</span> ever known ğŸ˜†", "<br>Someone who <span>Care</span> for others too much ğŸ˜…ğŸ˜†ğŸ˜‡", "white");



            setTimeout(function () {



                animateIt("<span>Serena Yvonne</span>, I have something very special for you ğŸ˜…", "I <span>draw</span> this ğŸ™ˆ for you, Hope you'll like it ğŸ–¼ğŸ¨ğŸŒ¸", "white", true);



                setTimeout(function () {

                    drawing.style.animation="fade 5s";

                    drawing.style.animationFillMode="forwards";

                    bhomic.style.display="block";

                },10000);

            },10000);

        },4000);

        },6500);

    },10000);



    function animateIt(text1, text2, color, isPic) {



        var ani1 = (isPic?"move_down_pic 10s":"move_down 10s");

        var ani2 = (isPic?"move_up_pic 10s":"move_up 10s");



        a.innerHTML=text1;

        a.style.animation = ani1;

        a.style.color=color;

        b.innerHTML=text2;

        b.style.animation = ani2;

        b.style.color=color;

    }

}

</script>
